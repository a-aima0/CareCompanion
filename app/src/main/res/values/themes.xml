    <!-- Custom styles for AlertDialog -->
    <style name="CustomAlertDialogTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/dark_blue</item> <!-- Change to desired color -->
        <item name="android:textSize">20sp</item> <!-- Change to desired size -->
    </style>

    <style name="CustomAlertDialogMessage" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/dark_blue</item> <!-- Change to desired color -->
        <item name="android:textSize">16sp</item> <!-- Change to desired size -->
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:background">@color/white</item>

    </style>


    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#00FF00</item>
    </style>
    



    <style name="Theme.CareCompanionWithBar" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
