<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <EditText
        android:id="@+id/contactNameEditText"
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_blue"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:background="@drawable/edittext_outline"
        android:layout_weight="0.15"
        android:layout_marginEnd="16dp"
        android:hint="Emergency Contact Name" />

    <EditText
        android:id="@+id/contactRelationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_blue"
        android:inputType="text"
        android:background="@drawable/edittext_outline"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        android:layout_marginTop="8dp"

        android:layout_marginEnd="16dp"
        android:hint="Emergency Contact Relation"/>

    <EditText
        android:id="@+id/contactPhoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_blue"
        android:inputType="phone"
        android:background="@drawable/edittext_outline"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="Emergency Contact Phone Number"/>

    <Button
        android:id="@+id/deleteContactButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:background="@color/dark_blue"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:text="Delete" />

</LinearLayout>